            .reviews__controls.flex.ai-fe.jc-sb
              .reviews__numbers.slider-numbers
              .swiper-arrows.jc-fe.inline-flex
                .swiper-button-prev.btn
                  <svg><use xlink:href="#arrow-right-icon" /></svg>
                .swiper-button-next.btn
                  <svg><use xlink:href="#arrow-right-icon" /></svg>

        .p-reviews__action.flex.jc-sb.ai-c
